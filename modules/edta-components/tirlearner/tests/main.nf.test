nextflow_process {

    name "Test Process TIRLEARNER"
    script "../main.nf"
    process "TIRLEARNER"

    tag "modules"
    tag "modules_nfcore"
    tag "tirlearner"
    tag "nf-core/gunzip/main"

    setup {
        run('GUNZIP') {
            script "../../../nf-core/gunzip/main"

            process {
                """
                input[0] = [
                    [ id:'test' ], // meta map
                    file(params.test_data['actinidia_chinensis']['genome']['genome_1_fasta_gz'], checkIfExists: true)
                ]
                """
            }
        }
    }

    test("actinidia_chinensis-genome_1_fasta_gz-success") {

        when {
            process {
                """
                input[0] = GUNZIP.out.gunzip
                input[1] = 'others'
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = GUNZIP.out.gunzip
                input[1] = 'others'
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }
}
